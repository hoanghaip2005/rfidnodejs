        <script>
            // Initialize Socket.IO
            const socket = io();

            // Update current date/time
            function updateDateTime() {
                const now = new Date();
                const options = {
                    year: 'numeric',
                    month: '2-digit',
                    day: '2-digit',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit',
                    timeZone: 'Asia/Ho_Chi_Minh'
                };
                document.getElementById('currentDateTime').textContent =
                    now.toLocaleString('vi-VN', options);
            }

            // Update every second
            setInterval(updateDateTime, 1000);
            updateDateTime();

            // Handle RFID status updates
            socket.on('rfid_status', function (data) {
                const indicator = document.getElementById('rfidIndicator');
                const statusText = document.getElementById('rfidStatusText');

                if (data.connected) {
                    indicator.className = 'status-indicator online';
                    statusText.textContent = 'Kết nối ổn định';
                } else {
                    indicator.className = 'status-indicator offline';
                    statusText.textContent = 'Mất kết nối';
                }
            });

            // Handle attendance updates
            socket.on('attendance_update', function (data) {
                loadRecentActivities();
                showNotification(`${data.user_name} đã chấm công ${data.action_type === 'check_in' ? 'vào' : 'ra'}`, 'success');
            });

            // Show modern notification
            function showNotification(message, type = 'info') {
                const notification = document.createElement('div');
                notification.className = 'notification';

                const header = type === 'success' ? 'Thành công' : type === 'error' ? 'Lỗi' : 'Thông báo';
                const iconClass = type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-exclamation-circle' : 'fa-info-circle';

                notification.innerHTML = `
                <div class="notification-header">
                    <i class="fas ${iconClass} me-2"></i>
                    ${header}
                </div>
                <div class="notification-body">
                    ${message}
                </div>
            `;

                document.body.appendChild(notification);

                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.style.animation = 'slideOutRight 0.3s ease-out';
                        setTimeout(() => notification.remove(), 300);
                    }
                }, 5000);
            }

            // Load recent activities with modern design
            async function loadRecentActivities() {
                try {
                    const response = await fetch('/admin/api/attendance?limit=10');
                    const data = await response.json();

                    const container = document.getElementById('recentActivities');

                    if (!data.success || data.data.records.length === 0) {
                        container.innerHTML = `
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-inbox text-muted" style="font-size: 3rem; opacity: 0.3;"></i>
                            </div>
                            <p class="text-muted mb-0">Chưa có hoạt động nào</p>
                            <small class="text-muted">Các hoạt động sẽ hiển thị ở đây</small>
                        </div>
                    `;
                        return;
                    }

                    const activities = data.data.records.map((record, index) => {
                        const time = new Date(record.scan_time).toLocaleString('vi-VN');
                        const actionText = record.action_type === 'check_in' ? 'Chấm công vào' : 'Chấm công ra';
                        const iconClass = record.action_type === 'check_in' ? 'check-in' : 'check-out';
                        const badgeClass = record.action_type === 'check_in' ? 'badge-success' : 'badge-danger';
                        const timeAgo = getTimeAgo(new Date(record.scan_time));

                        return `
                        <div class="activity-item" style="animation: slideUp 0.6s ease-out ${index * 0.1}s both;">
                            <div class="d-flex align-items-start">
                                <div class="activity-icon-modern ${iconClass}">
                                    <i class="fas ${record.action_type === 'check_in' ? 'fa-sign-in-alt' : 'fa-sign-out-alt'}"></i>
                                </div>
                                <div class="activity-content flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="activity-title">${record.user_name}</h6>
                                            <p class="activity-description">${actionText}</p>
                                            <div class="activity-time">
                                                <i class="fas fa-clock me-1"></i>
                                                ${time} • ${timeAgo}
                                            </div>
                                        </div>
                                        <span class="activity-badge ${badgeClass}">
                                            ${record.action_type === 'check_in' ? 'Vào' : 'Ra'}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    }).join('');

                    container.innerHTML = activities;

                    // Add stagger animation
                    const items = container.querySelectorAll('.activity-item');
                    items.forEach((item, index) => {
                        item.style.animationDelay = `${index * 0.1}s`;
                    });

                } catch (error) {
                    console.error('Error loading recent activities:', error);
                    document.getElementById('recentActivities').innerHTML = `
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="fas fa-exclamation-triangle text-danger" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                        <p class="text-danger mb-2">Không thể tải dữ liệu</p>
                        <button class="btn btn-outline-primary btn-sm" onclick="loadRecentActivities()">
                            <i class="fas fa-redo me-1"></i>Thử lại
                        </button>
                    </div>
                `;
                }
            }

            // Get time ago with Vietnamese
            function getTimeAgo(date) {
                const now = new Date();
                const diff = now - date;
                const minutes = Math.floor(diff / 60000);
                const hours = Math.floor(diff / 3600000);
                const days = Math.floor(diff / 86400000);

                if (days > 0) return `${days} ngày trước`;
                if (hours > 0) return `${hours} giờ trước`;
                if (minutes > 0) return `${minutes} phút trước`;
                return 'Vừa xong';
            }

            // Modern logout function - Using global logout function from main.js
            // The logout function is already defined in main.js and exported globally

            // Custom confirmation modal
            function showConfirmation(title, message, confirmText, cancelText) {
                return new Promise((resolve) => {
                    const modal = document.createElement('div');
                    modal.style.cssText = `
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0, 0, 0, 0.5);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    z-index: 10000;
                    backdrop-filter: blur(5px);
                `;

                    modal.innerHTML = `
                    <div style="
                        background: white;
                        border-radius: 16px;
                        padding: 2rem;
                        max-width: 400px;
                        width: 90%;
                        box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);
                        animation: slideUp 0.3s ease-out;
                    ">
                        <h5 style="margin: 0 0 1rem 0; color: var(--gray-900);">${title}</h5>
                        <p style="margin: 0 0 2rem 0; color: var(--gray-600);">${message}</p>
                        <div style="display: flex; gap: 1rem; justify-content: flex-end;">
                            <button id="cancelBtn" style="
                                padding: 0.5rem 1rem;
                                border: 2px solid var(--gray-300);
                                background: white;
                                color: var(--gray-700);
                                border-radius: 8px;
                                cursor: pointer;
                                font-weight: 500;
                            ">${cancelText}</button>
                            <button id="confirmBtn" style="
                                padding: 0.5rem 1rem;
                                border: none;
                                background: var(--danger-color);
                                color: white;
                                border-radius: 8px;
                                cursor: pointer;
                                font-weight: 500;
                            ">${confirmText}</button>
                        </div>
                    </div>
                `;

                    document.body.appendChild(modal);

                    document.getElementById('confirmBtn').onclick = () => {
                        modal.remove();
                        resolve(true);
                    };

                    document.getElementById('cancelBtn').onclick = () => {
                        modal.remove();
                        resolve(false);
                    };

                    modal.onclick = (e) => {
                        if (e.target === modal) {
                            modal.remove();
                            resolve(false);
                        }
                    };
                });
            }

            // Number animation
            function animateNumbers() {
                const numbers = document.querySelectorAll('.stats-number');
                numbers.forEach(number => {
                    const target = parseInt(number.textContent);
                    let current = 0;
                    const increment = target / 50;
                    const timer = setInterval(() => {
                        current += increment;
                        if (current >= target) {
                            current = target;
                            clearInterval(timer);
                        }
                        number.textContent = Math.floor(current);
                    }, 20);
                });
            }

            // Initialize everything when DOM is loaded
            document.addEventListener('DOMContentLoaded', function () {
                loadRecentActivities();

                // Add some delay for animation
                setTimeout(animateNumbers, 500);

                // Add fade-in animation to elements
                const elements = document.querySelectorAll('.fade-in, .slide-up');
                elements.forEach((el, index) => {
                    el.style.animationDelay = `${index * 0.1}s`;
                });
            });

            // Handle window resize for responsive design
            window.addEventListener('resize', function () {
                if (window.innerWidth > 1024) {
                    document.getElementById('sidebar').classList.remove('mobile-open');
                }
            });

            // Add CSS for new animations
            const style = document.createElement('style');
            style.textContent = `
            @keyframes slideOutRight {
                from {
                    transform: translateX(0);
                    opacity: 1;
                }
                to {
                    transform: translateX(100%);
                    opacity: 0;
                }
            }
        `;
            document.head.appendChild(style);
        </script>

